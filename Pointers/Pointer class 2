// pointer with function

#include <iostream>
using namespace std;

void solve(int *arr,int size){

  // cout<< "size of array inside function: "<< sizeof(arr) << endl;

  cout<<"Inside solve func ->arr: "<<arr<< endl;

  cout<<"Inside solve func ->arr: "<<&arr<< endl;

  
}



int main() {
 
